{
  "name": "hive-monorepo",
  "private": true,
  "packageManager": "pnpm@10.15.1",
  "scripts": {
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "hive": "docker compose -f docker/docker-compose.yml up --build",
    "hive:down": "docker compose -f docker/docker-compose.yml down -v",
    "hive:logs": "docker logs -f hive-dispatcher"
  },
  "devDependencies": {
    "semantic-release": "^24.2.8",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/github": "^10.1.4",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@semantic-release/git": "^10.0.1"
  }
}
